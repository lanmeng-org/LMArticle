# EditorConfig: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,less,scss,html,xml,yml,json,blade.php,js,jsx}]
indent_size = 2

[*.{html,md}]
trim_trailing_whitespace = false
